{
  "version": "1.0",
  "scripts": [
    {
      "documentation": {
        "command": "http",
        "description": "Decrypt and import HTTP logs into Elasticsearch. Expects a private key in a file in the './keys' folder named 'gpg.key', and encrypted files in the './data/encrypted/http' directory.",
        "arguments": ["recipient", "batch-size:1000"]
      },
      "environment": {
        "image": "redpencil/app-http-logger-visualize-scripts:1.0.0",
        "interactive": true,
        "join_networks": true,
        "script": "http.sh"
      },
      "mounts": {
        "app": "/project/"
      }
    },
    {
      "documentation": {
        "command": "stats",
        "description": "Import unencrypted stats into Elasticsearch. Expect stats files in the './data/logs/stats' directory.",
        "arguments": ["batch-size:1000"]
      },
      "environment": {
        "image": "redpencil/app-http-logger-visualize-scripts:1.0.0",
        "interactive": true,
        "join_networks": true,
        "script": "stats.sh"
      },
      "mounts": {
        "app": "/project/"
      }
    },
    {
      "documentation": {
        "command": "logunstash",
        "description": "Cleanup old log entries from Elasticsearch.",
        "arguments": ["--elasticsearch-url", "--index-pattern", "--before-date", "--older-than-days"]
      },
      "environment": {
        "image": "redpencil/app-http-logger-visualize-scripts",
        "interactive": true,
        "join_networks": true,
        "script": "logunstash.py"
      }
    }
  ]
}
